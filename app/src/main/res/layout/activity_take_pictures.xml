<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.technoxol.mandepos.TakePicturesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mp"
                    android:textColor="@color/cyan"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mp_abr"
                    android:textColor="@color/cyan"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="License Pictures"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/cyan"
                    android:layout_marginBottom="50dp"
                    android:id="@+id/catName"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_add_picture"
                    android:id="@+id/image"
                    android:onClick="onClickTakePickture"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/picturesList"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_btn"
                    android:hint="Upload"
                    android:textColorHint="@color/white"
                    android:inputType="textPassword"
                    android:layout_marginBottom="40dp"
                    android:onClick="onSendPics"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>
</RelativeLayout>
